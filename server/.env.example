# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# For local MongoDB installation:
MONGODB_URI=mongodb://localhost:27017/relawand

# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/relawand?retryWrites=true&w=majority

# For MongoDB Community Server with authentication:
# MONGODB_URI=mongodb://<username>:<password>@localhost:27017/relawand?authSource=admin

# Client Configuration
CLIENT_URL=http://localhost:3000

# JWT Configuration (for future authentication)
JWT_SECRET=your-super-secret-jwt-key-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Keys
# Google Maps API Key for location services and static maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# OpenWeatherMap API Key for weather data
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key-here

# MQTT Configuration
# Self-hosted EMQX broker on our server (RECOMMENDED)
MQTT_BROKER=103.197.188.247
MQTT_PORT=1883
MQTT_TOPIC=Relawand_F01/sensor/data

# Alternative public brokers for testing only:
# MQTT_BROKER=broker.emqx.io
# MQTT_BROKER=test.mosquitto.org
# MQTT_BROKER=broker.hivemq.com

# For local broker, use your local IP:
# MQTT_BROKER=192.168.1.100
# MQTT_TOPIC=Relawand_F01/sensor/data

# Default device ID for incoming sensor data
DEFAULT_DEVICE_ID=STM32-001

# Image Upload Configuration
# Directory for storing uploaded images from IoT devices
UPLOAD_DIR=/var/www/relawand/uploads
# Base URL for accessing uploaded images
BASE_URL=http://103.197.188.247
# Default user ID for webhook uploads (replace with actual user ID)
DEFAULT_USER_ID=000000000000000000000000